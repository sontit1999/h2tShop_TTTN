
<style>
    .banner_cagetoy {
        width: 100%;
    }

        .banner_cagetoy img {
            width: 100%;
            height: auto;
        }

    .titleAndFilter h3 {
        font-weight: 600;
        font-size: 20px;
    }

    .itemProduct {
        box-sizing: border-box;
        padding: 20px;
    }

        .itemProduct img {
            width: 100%;
            height: auto;
        }

        .itemProduct h3 {
            color: black;
            font-size: 15px;
        }

            .itemProduct h3:hover {
                color: orange;
            }

    a {
        text-decoration: none !important;
    }

    .pagination {
        display: inline-block;
    }

        .pagination a {
            color: black;
            float: left;
            padding: 8px 16px;
            text-decoration: none;
        }
</style>
<div class="banner_cagetoy">

    <img src="@ViewBag.lspMain.LinkAnh" />

</div>
<div class="container_Product">
    <div class="row titleAndFilter">
        <div class="col-md-3">
            <h3>@ViewBag.lspMain.TenLoai</h3>
        </div>
        <div class="col-md-3"></div>
        <div class="col-md-3"></div>
        <div style="text-align: end;" class=" col-md-3">
            <form style="padding: 10px;">
                <select id="mySelect" onchange="myFunction()" class="custom-select mr-sm-2" id="inlineFormCustomSelect">                 
                    <option value="1">Giá: tăng dần</option>
                    <option value="2">Giá: giảm dần</option>
                    <option value="3">Tên: A-Z</option>
                    <option value="4">Tên: Z-A</option>                  
                </select>
            </form>
        </div>
    </div>
    <div class="row newproduct">
        @foreach (var item in ViewBag.listsp)
        {
            <div class="col-md-3 itemProduct">
                <a style="text-decoration:none;" href="/Product/detail?id=@item.MaSanPham">
                    <img src="@item.LinkAnh" />
                    <h3>
                        @item.TenSanPham
                    </h3>
                </a>

                <p>@item.Gia đ</p>
            </div>
        }


    </div>
    <div class="text-center">
        <div class="text-center pagination">

            <a href="#">&laquo;</a>
            @for (int i = 0; i <= @ViewBag.count; i++)
            {
                <a href="/Cagetory/Index?id=@ViewBag.maloai&page=@(i)">@(i)</a>
            }
            <a href="#">&raquo;</a>
        </div>
    </div>
</div>
<script>
function myFunction() {
    var x = document.getElementById("mySelect").value;
    var url = "Index?id=@ViewBag.maloai&page=@ViewBag.page&filter=" + x;
    window.location.href = url;
}
</script>

