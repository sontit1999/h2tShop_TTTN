
@{
    
}
    <style>
        td {
            padding: 10px;
        }

        th {
            padding: 5px;
        }

        .title_cagetory {
            color: black;
            font-family: 'Adobe Devanagari';
            display: inline-block;
            text-align: center;
            font-size: 35px;
            margin: 0 auto;
        }

            .title_cagetory:hover {
                color: orange;
            }

        .itemProduct {
            box-sizing: border-box;
            padding: 20px;
        }

            .itemProduct img {
                width: 100%;
                height: auto;
            }

            .itemProduct h3 {
                color: black;
                font-size: 15px;
            }

                .itemProduct h3:hover {
                    color: orange;
                }

        a {
            text-decoration: none !important;
        }
    </style>
    <div style="text-align:center">
        <h2>Tra cứu đơn hàng</h2>
        <form action="/Admin/TraCuuDonHang" method="get" >
            <div style="text-align:center;margin: 10px auto" class="input-group">
                <input type="search" name="keyword" class="form-control rounded" placeholder="Nhập tên người nhận hoặc mã đơn hàng" aria-label="Search"
                       aria-describedby="search-addon" />
                <button type="submit" style="margin-top:10px;" class="btn btn-outline-primary">search</button>
            </div>
        </form>
    </div>
<div class="containerProduct">
    <div class="row">
        @foreach (var item in ViewBag.dsDonHang)
        {
        <div class="col-md-3 itemProduct">
            <a style="text-decoration:none;">
                <img src="https://png.pngtree.com/png-clipart/20190904/original/pngtree-light-blue-shopping-cart-illustration-png-image_4500466.jpg" />
                <h3>
                    Khách Hàng: @item.TenKhachHang
                </h3>
            </a>
            <p> Chi tiết: @item.TTDonHang </p>
            <p>Tổng tiền: @Html.FormatValue(item.TongTien, "{0:#,##0} đ")</p>
            <p>Ngày: @item.NgayTao</p>
            @if (item.NgayHenTra != null)
            {
                <p>Ngày hẹn trả: <b>@item.NgayHenTra</b></p>
            }
            <p>@item.GhiChu</p>
            <div>
                @if (item.IsAccept == 0)
                {
                    <button type="button" class="btn btn-success">Chưa xử lý</button>
                }
                else if (item.IsAccept == 1)
                {
                    <button type="button" class="btn btn-primary">Đã xác nhận</button>
                }
                else
                {
                    <button type="button" class="btn btn-danger">Đã từ chối</button>
                }



            </div>

        </div>
        }
    </div>
</div>


