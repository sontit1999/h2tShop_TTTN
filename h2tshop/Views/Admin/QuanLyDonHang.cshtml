
@{
    ViewBag.Title = "QuanLyDonHang";
    Layout = "~/Views/Shared/_Layout_ad.cshtml";
    int i = 1;
}
<style>
    td {
        padding: 10px;
    }

    th {
        padding: 5px;
    }
  

        
</style>
<h4 style="color: deepskyblue;">Danh sách đơn hàng</h4>
<div style="width: 100%;" class="container_donHang">
    <table border="1" >
        <tr>
            
            <th>
                Mã đơn hàng
            </th>
            <th>
                Tên khách hàng
            </th>
            <th width="200">
                Thông tin đơn hàng
            </th>
            <th>
                Tổng tiền
            </th>
            <th>
                Ghi Chú
            </th>
            <th>
                Ngày tạo
            </th>
            <th>
                Xác nhận
            </th>
        </tr>

        @foreach (var item in ViewBag.dsDonHang)
        {
            <tr>
               
                <td>
                    @item.MaDonHang
                </td>
                <td>
                    @item.TenKhachHang
                </td>
                <td width="200">
                    @item.TTDonHang
                </td>
                <td>
                    @Html.FormatValue(item.TongTien, "{0:#,##0} đ")
                   
                </td>
                <td>
                    @item.GhiChu
                </td>
                <td>
                    @item.NgayTao
                </td>
                <td>
                    <a href="/Cart/AcceptOrder?id=@item.MaDonHang&isAccept=1"  class="btn btn-success">ok</a><a href="/Cart/AcceptOrder?id=@item.MaDonHang&&isAccept=2" style="margin-left:10px;"  class="btn btn-danger">X</a>
                </td>
               
            </tr>
                
        }


    </table>
</div>

